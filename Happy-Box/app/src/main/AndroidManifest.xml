<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iagl.slimane.final_project" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

<application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme" >
    <activity
        android:name=".activities.MainActivity"
        android:label="Première" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity
        android:name=".activities.ProposeTransaction"
        android:label="Proposition" >
    </activity>
    <activity
        android:name=".activities.SummaryTransaction"
        android:label="Récapitulatif" >
    </activity>
    <activity
        android:name=".activities.Home"
        android:label="Accueil" >
    </activity>
    <activity
        android:name=".activities.SignIn"
        android:label="Connexion" >
    </activity>
    <activity
        android:name=".activities.SignUp"
        android:label="Enregistrement" >
    </activity>
    <activity
        android:name=".activities.ShowAdvert"
        android:label="Annonces" >
    </activity>
    <activity
        android:name=".activities.SignOut"
        android:label="Déconnexion" >
    </activity>

</application>

</manifest>
